<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_navigation"
    app:startDestination="@id/addFoodFragment">

    <fragment
        android:id="@+id/addFoodFragment"
        android:name="com.example.foodmanagerroomtest.ui.addfood.view.AddFoodFragment"
        android:label="AddFoodFragment" >
        <action
            android:id="@+id/action_addFoodFragment_to_showFoodFragment"
            app:destination="@id/showFoodFragment" />
    </fragment>
    <fragment
        android:id="@+id/showFoodFragment"
        android:name="com.example.foodmanagerroomtest.ui.showfood.view.ShowFoodFragment"
        android:label="ShowFoodFragment" >
        <action
            android:id="@+id/action_showFoodFragment_to_addFoodFragment"
            app:destination="@id/addFoodFragment" />
    </fragment>
</navigation>